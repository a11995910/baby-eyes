<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- 护眼图标（使用新 eyeicon.png） -->
        <ImageView
            android:id="@+id/image_eye_protection"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/eyeicon"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 去掉主页标题行 -->

        <!-- 功能介绍 -->
        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="帮助孩子保持健康用眼。当距离屏幕过近时，温柔地提醒孩子与屏幕保持合适距离，保护视力更安心。"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_eye_protection" />

        <!-- 功能特点 -->
        <LinearLayout
            android:id="@+id/layout_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/text_description">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ 温和提醒，保护视力"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ 家长可随时开启/关闭"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ 可自定义距离与提醒语"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ 不上传照片与视频，隐私有保障"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <!-- 主要操作按钮区域 -->
        <LinearLayout
            android:id="@+id/layout_main_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/layout_features">

            <!-- 护眼检测开关 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/panel_background"
                android:padding="20dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:layout_marginEnd="16dp"
                    android:tint="@color/design_default_color_primary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="护眼检测"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/text_detection_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已关闭"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <Switch
                    android:id="@+id/switch_protection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

            <!-- 按钮组：设置 与 使用说明 同行排列 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_settings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="⚙️ 设置"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <Button
                    android:id="@+id/button_first"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="📖 使用说明"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>